<Window x:Class="BillingToolBox.Windows.PopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PopUpWindow" Height="200" Width="300" ResizeMode="NoResize">
    <Grid Margin="5">
        <TextBlock Margin="0,0,0,28" Name="textBlock_Message" Text="TextBlock" TextWrapping="WrapWithOverflow" />
        <Button Content="OK" Height="23" HorizontalAlignment="Center" Name="button_OK" VerticalAlignment="Bottom" Width="75" Click="button_OK_Click" />
    </Grid>
</Window>
