<Window x:Class="BillingToolBox.Windows.DatabaseTableViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Table" Height="400" Width="550" MinHeight="300" MinWidth="400" ResizeMode="CanResizeWithGrip">
    <Grid Margin="5">
        <ComboBox Height="23" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="comboBox_Database" VerticalAlignment="Top" SelectionChanged="comboBox_Database_SelectionChanged"/>
        <ComboBox Height="23" HorizontalAlignment="Stretch" Margin="0,28,0,0" Name="comboBox_Table" VerticalAlignment="Top" SelectionChanged="comboBox_Table_SelectionChanged"/>
        <DataGrid AutoGenerateColumns="True" AlternatingRowBackground="LightBlue" IsReadOnly="True"  HorizontalAlignment="Stretch" Margin="0,56,0,0" Name="dataGrid_Results" VerticalAlignment="Stretch" MouseDoubleClick="dataGrid_Results_MouseDoubleClick"/>
    </Grid>
</Window>
