<Window x:Class="BillingToolBox.Windows.ChangeConnectionStringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter your connection string:" Height="100" Width="400" MaxHeight="100" MinHeight="100" MinWidth="400"  ResizeMode="CanResizeWithGrip">
    <Grid Margin="5"> 
        <TextBox Height="23" Margin="0,0,0,0" Name="textBox_ConnectionString" VerticalAlignment="Top" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="0,28,0,0" Name="button_Save" VerticalAlignment="Top" Width="75" Click="button_Save_Click"/>
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="80,28,0,0" Name="button_Cancel" VerticalAlignment="Top" Width="75" Click="button_Cancel_Click" />
    </Grid>
</Window>
