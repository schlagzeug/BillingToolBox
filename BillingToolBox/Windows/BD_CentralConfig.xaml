<Window x:Class="BillingToolBox.Windows.BD_CentralConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BillingDecisions_CentralConfig" MinHeight="250" MinWidth="300" Height="380" Width="500" ResizeMode="CanResizeWithGrip">
    <Grid Margin="5">
        <Label Content="Location:" Height="28" HorizontalAlignment="Left" Name="label_BDCC_Location" VerticalAlignment="Top" Margin="0,0,0,0" />
        <TextBox Height="23" VerticalAlignment="Top" Margin="0,21,81,0" Name="textBox_BDCC_Location" IsReadOnly="True" IsReadOnlyCaretVisible="True" />
        <Button Content="Open File" Height="23" HorizontalAlignment="Right" Margin="0,21,0,0" Name="button_BDCC_OpenFile" VerticalAlignment="Top" Width="75" Click="button_BDCC_OpenFile_Click"/>
        <DataGrid AutoGenerateColumns="True" AlternatingRowBackground="LightBlue" IsReadOnly="True"  Margin="0,50,0,29" Name="dataGrid_BDCC_InsurityCustomers" MouseDoubleClick="dataGrid_BDCC_InsurityCustomers_MouseDoubleClick"/>
        <Button Content="Refresh" Height="23" HorizontalAlignment="Left" Margin="0,0,0,0" Name="button_BDCC_Refresh" VerticalAlignment="Bottom" Width="75" Click="button_BDCC_Refresh_Click"/>
    </Grid>
</Window>
