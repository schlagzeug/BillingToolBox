<Window x:Class="BillingToolBox.Windows.BDServicebusConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BDServicebusConfig" MinHeight="250" MinWidth="300" Height="300" Width="460" ResizeMode="CanResizeWithGrip">
    <Grid Margin="5">
        <Label Content="Location:" Height="28" HorizontalAlignment="Left" Name="label_SBC_Location" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="0,21,81,0" Name="textBox_SBC_Location" VerticalAlignment="Top" IsReadOnly="True" IsReadOnlyCaretVisible="True"/>
        <Button Content="Open File" Height="23" HorizontalAlignment="Right" Margin="0,21,0,0" Name="button_SBC_OpenFile" VerticalAlignment="Top" Width="75" Click="button_SBC_OpenFile_Click"/>
        <DataGrid AutoGenerateColumns="True" AlternatingRowBackground="LightBlue" IsReadOnly="True" Margin="0,50,0,29" Name="dataGrid_SBC_EndPoints" MouseDoubleClick="dataGrid_SBC_EndPoints_MouseDoubleClick"/>
        <Button Content="Refresh" Height="23" HorizontalAlignment="Left" Margin="0,0,0,0" Name="button_SBC_Refresh" VerticalAlignment="Bottom" Width="75" Click="button_SBC_Refresh_Click"/>
    </Grid>
</Window>
