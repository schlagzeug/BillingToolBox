<Window x:Class="BillingToolBox.Windows.PathTableAddEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Entry to Path Table" 
        Height="160" MinHeight="160" MaxHeight="160" Width="300" MinWidth="300" ResizeMode="CanResizeWithGrip">
    <Grid Margin="5">
        <Label Content="Path Table: " Height="28" Name="label_PathTablePath" VerticalAlignment="Top"/>
        
        <Label Content="MASK:" Height="28" HorizontalAlignment="Left" Margin="0,28,0,0" Name="label2" VerticalAlignment="Top" Width="45" HorizontalContentAlignment="Right"/>
        <TextBox Height="23" Margin="50,28,0,0" Name="textBox_Mask" VerticalAlignment="Top"/>
        
        <Label Content="PATH:" Height="28" HorizontalAlignment="Left" Margin="0,56,0,0" Name="label3" VerticalAlignment="Top" Width="45" HorizontalContentAlignment="Right"/>
        <TextBox Height="23" Margin="50,56,0,0" Name="textBox_Path" VerticalAlignment="Top"/>
        
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="0,84,0,0" Name="button_Save" VerticalAlignment="Top" Width="75" Click="button_Save_Click"/>
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="80,84,0,0" Name="button_Cancel" VerticalAlignment="Top" Width="75" Click="button_Cancel_Click"/>
    </Grid>
</Window>
